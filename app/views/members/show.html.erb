                # ListOfMembersToProjects.each {|m_to_p| 
                #   ProjectList << Project.find(m_to_p.p_id);
                # }
                # ProjectList.each { |project| Member.find(project.manager_id).name }
              %></td>
        </tr>
        <% end %>
    </tbody>
</table>

  <div>
    <%= link_to 'Back', members_path %> |
    <%= link_to 'Edit', edit_member_registration_path %>
    <% if current_member.id == @member.id %>
        | <%= link_to 'Destroy', current_member, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

  </div>

</div>