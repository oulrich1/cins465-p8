
<div class="large-9 push-3 columns">



    <h1>Project Details</h1>
    <div class="seperator-small spm-dark"></div>
    <p id="notice"><%= notice %></p>

    <%= render "show_project_summary" %>


    <div class="seperator-small" style="opacity: 0.65;"></div>
    <h2>Members</h2>
    <%= render "show_project_members" %>
    <div>
    <% if current_member && current_member.id == @project.manager_id %>
        <%= link_to 'Add Members', "/projects/#{@project.id}/show_members" %>
    <% end %>
    </div>
    <br>

    <div class="seperator-small" style="opacity: 0.45;"></div>
    <h2>Deadlines</h2>
    <%= render @project.deadlines %>
    <div>

    <% if current_member %>
        <%= link_to 'New Deadline', new_deadline_path %>
    <% end %>
    </div>
    <br>

    <div class="seperator-small" style="opacity: 0.18;"></div>
    <div style="height:10px;"></div>
    <div>
        <% if current_member %>
        <%= link_to 'Edit', edit_project_path(@project) %> |
        <% end %>
        <%= link_to 'Back', projects_path %>
    </div>

</div>