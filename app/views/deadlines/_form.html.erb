<%= simple_form_for(@deadline) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :members %>
    <%= f.association :projects %>
    <%= f.input :description %>
    <%= f.input :due_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
