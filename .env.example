# Environment Variables Example
# Copy this file to .env and update with your values
# Never commit .env to version control!

# Rails Configuration
RAILS_ENV=production
SECRET_KEY_BASE=your_secret_key_here_generate_with_rails_secret

# Database Configuration (MySQL - Production Only)
DATABASE_NAME=group_project_sync_production
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_secure_password_here
DATABASE_HOST=localhost
DATABASE_SOCKET=/var/run/mysqld/mysqld.sock

# Server Configuration
PORT=3000
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5

# Asset Configuration
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true
RAILS_LOG_LEVEL=info

# Optional: Web Concurrency (for multiple workers)
# WEB_CONCURRENCY=2

# Generate SECRET_KEY_BASE with: rails secret
# Generate strong password with: openssl rand -hex 64
